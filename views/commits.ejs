<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h2>Commits for Repository: <%= repository %></h2>
    <a href="/repositories/<%= repository %>/add-code" class="btn btn-success mb-3">Add Code and Commit</a>
    <% if (commits.length > 0) { %>
      <% commits.forEach(commit => { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Commit Message: <%= commit.message %></h5>
            <p class="card-text"><small class="text-muted">Date: <%= commit.timestamp %></small></p>
            <pre class="card-text"><%= commit.code %></pre>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No commits found for this repository.</p>
    <% } %>
  </div>
</body>
</html>
